extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Карточка с постом';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Карточка с постом

    //- Демонстрация компонента
    .ui-kit__component-demo
       +cards-project('card-1.jpg', 'Архитектурное бюро John Doe и партнеры. Сайт под ключ')

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            +cards-project( img, info, link='#')

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/cards-project.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            mixin cards-project( img, info, link='#' )
                .card-project
                    .card-project__img
                        .card-frame
                            +cards-frame() 
            a(href=link)
                img(src="./../img/project-cards/" + img, alt="Проект")
            .card-post__info 
                p #{info}