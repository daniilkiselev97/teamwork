extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Сообщение о действии';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Сообщение о действии

    //- Демонстрация компонента
    .ui-kit__component-demo
       +notification-yellow()

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            +notification-yellow()

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/notification-yellow.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
           mixin notification-yellow (text='Сообщение о действии')
                .notification.notification--yellow 
                    .notification__text.notification__text--black #{text}
            block